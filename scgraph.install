post_install() {
  cat << EOF

>>> Create the directories
>>> 	~/.scgraph/synthdefs
>>> 	~/.scgraph/textures
>>> 	~/.scgraph/shaders
>>> 	~/.scgraph/recordings
>>>
>>>  Have a look at the examples in 
>>>	/usr/share/scgraph/examples/
>>>  They show you how to make simple animations with scgraph.

EOF
}

post_upgrade() {
  post_install
}
